# clone a git repo by ists user/name
clonerepo (){

	reponame="$1"
	repo=${reponame#*/}
    repoowner=${reponame%/*}

	#print "cloning ${reponame}..."
	print "git submodule add https://github.com/${repoowner}/${repo} vim/bundle/${repo}"
}

