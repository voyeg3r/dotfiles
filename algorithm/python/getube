import pafy
import sys
import os

if len(sys.argv) > 1:
    url = sys.argv[1]
else:
    url = input("Type the youtube url or ID: ")

def cls():
    if os.name == 'posix':
        os.system('clear')
    else:
        os.system('cls')

cls()

video = pafy.new(url)
bestvideo = video.getbestvideo()
print("Baixando: ", video.title)
bestvideo.download()
