#!/usr/bin/env bash
# Last Change: Wed, 30 Nov 2022 - 14:13:27
#
# Get the current WiFi SSID
#
# Author: Dave Eddy <dave@daveeddy.com>
# Date: June 26, 2018
# License: MIT
# tags: [wifi, network, ssid, net]

ssid=$(nmcli -t --color=no con show --active | \
    awk -F: '$3 == "802-11-wireless" { print $1 }')
if [[ -n $ssid ]]; then
	echo "$ssid"
else
	echo '(no wifi)';
fi

